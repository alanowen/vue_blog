@import "variables.styl";
@import url("../../../node_modules/normalize.css/normalize.css");


html, body {
    margin: 0;
    padding: 0;
    height 100%;
}

body {
    font-size: 12px;
    font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    color: $content-color;
}

a {
    cursor: pointer;
    color: $sub-color;
    text-decoration:none;
}

code {
    padding: 2px 4px;
    font-size: 90%;
    color: #c7254e;
    background-color: #f9f2f4;
    border-radius: 4px;
    font-family: "Sans Mono","Consolas","Courier",monospace,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑";
}

.column-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    height: 100%;
}

.row-container {
    display flex;
    justify-content: space-between;
    width: 100%;
    height 100%;
}

.hljs {
    font-family: "Sans Mono", "Consolas", "Courier", monospace,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑";
}